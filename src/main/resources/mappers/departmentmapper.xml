<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.hospital.dao.IDepartmentDao">
    <sql id="departmentBody">
        Departments.id as dep_id,
        Departments.name as dep_name
    </sql>
    <resultMap id="DepResultMap" type="com.solvd.hospital.model.Department">
        <id property="id" column="dep_id"/>
        <result property="name" column="dep_name"/>
    </resultMap>
</mapper>